@import "voice.wxss";
@import "extra.wxss";
input{
    padding-top: 10rpx;
    padding-bottom:10rpx;
    width: 100%;
}

.extra-btn-style{
    width: 50rpx;
    height: 50rpx;
    padding:25rpx 15rpx;
    display: flex;
    flex-shrink:0;
}
.input-text-voice-super{
    display: flex;
    flex-direction: row;
    background-color: white;
    width: 100%;
    align-items: center;
    height:100rpx;
}
.input-flex-column{
    width:100%;
    display: flex;
    flex-direction:column;
    position: fixed;
    left: 0;
    bottom: 0;
}

.list-divide-line {
    width: 100%;
    height: 1rpx;
    background-color: #dddddd;
}

.word-box {
  width: 100%;
  background-color: #fff;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  align-content: center;
  justify-content: center;
}

.chat-input-style{
    border-radius:10rpx;
    border:1rpx solid gainsboro;
    padding:10rpx;
    min-height: 50rpx;
    background-color: #EFEFEF;
    flex: 1;
    margin-right: 20rpx;
}

.chat-input-send-button-style{
    width: 100rpx;
    padding: 15rpx 0;
    font-size: 28rpx;
    text-align: center;
    margin: 0 10rpx;
    border-radius: 10rpx;
    background-color: #3C89FF;
    color: #fff;
}

.input-flex-box {
  width: 100%;
  background-color: #fafafa;
  position: fixed;
  bottom: 0;
  left: 0
}

.operate-category-box {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx 60rpx;
  box-sizing: border-box;
  border-top: 1px solid #e9e9e9;
  border-bottom: 1px solid #e9e9e9;
}

.operate-category-item {
  font-size: 20rpx;
  line-height: 20rpx;
  text-align: center;
  color: #9e9e9e;
}

.item-check {
  color: #3C89FF;
}

.operate-category-item image {
  width: 50rpx;
  height: 50rpx;
  margin-bottom: 10rpx;
  display: block;
}

.look-box {
  height: 280rpx;
  width: 100%;

}

.look-warp {
  display: flex;
  flex-wrap: wrap;
  overflow: hidden;
  padding: 25rpx;
  box-sizing: border-box;
}

.look-warp view {
  font-size: 42rpx;
  margin: 20rpx;
}