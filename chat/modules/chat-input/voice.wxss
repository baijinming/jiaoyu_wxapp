.voice-box {
  width: 100%;
  height: 320rpx;
  text-align: center;
  font-size: 24rpx;
  overflow: hidden;
  background-color: #fff;
}

.voice-box .voice-text1 {
  color: #666;
  line-height: 24rpx;
  margin: 40rpx 0 30rpx;
}

.send-text {
  display: flex;
  align-content: center;
  justify-content: center
}

.voice-box .voice-text1 text {
  color: #F25D5F;
}

.voice-box .start-voice {
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
  border: 4rpx solid #F25D5F;
  border-radius: 50%;
  position: relative;
}

.voice-box .start-voice::after {
  content: '';
  width: 120rpx;
  height: 120rpx;
  background-color: #F25D5F;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%)
}

.end-voice {
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
  border: 4rpx solid #F25D5F;
  border-radius: 50%;
  position: relative;
}

.end-voice::after {
  content: '';
  width: 80rpx;
  height: 80rpx;
  background-color: #F25D5F;
  border-radius: 6rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%)
}

.voice-box .send-voice {
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto;
  background-color: #3C89FF;
  border-radius: 50%;
  color: #fff;
  font-size: 28rpx;
  line-height: 120rpx;
  text-align: center;
}

.recording-text {
  color: #F25D5F;
  margin-top: 10rpx; 
}