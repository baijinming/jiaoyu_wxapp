/* component/chat/before.wxss */
.fenge {
  width:652rpx;
  height:2rpx;
  background:rgba(240,240,240,1);
}
.item {
  display: flex;
  justify-content: space-between;
  font-size:31rpx;
  font-family:PingFangSC;
  font-weight:400;
  padding:25rpx 0rpx;
  color:rgba(48,48,48,1);
  align-items: center;
}
.item-op-wrap {
  display: flex;
  justify-content: space-between
}
.item-send {
  margin-right: 33rpx;
  color: #3C89FF;
}
.item-text {
  max-width:500rpx;
}
.item-del {
  color: #FE756A;
}
.image-class {
  width: 351rpx;
  height: 187rpx;
}
.tabwrap {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 0rpx;
  border-bottom:1rpx solid rgba(240,240,240,1);
}
.tab {
  width:243rpx;
  height:89rpx;
  border-radius:11rpx;
  border:2rpx solid rgba(211,211,211,1);
  font-size:31rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(48,48,48,1);
  text-align: center;
  line-height: 89rpx;
}
.a-wrap {
  padding: 0rpx 40rpx;
  position: relative;

}
.position-close {
  position:absolute;
  right:6rpx;
  top:6rpx;
  color: #3C89FF;
}
.active {
  background:rgba(60,137,255,1);
  color:rgba(255,255,255,1);
}
.bootom-save {
  /* height: 400rpx; */
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0px;
  z-index: 99999999;
  left:0px;
}
.bootom-area {
  display:flex;
  justify-content:center;
  padding:10rpx 40rpx;
 
}
.area-c {
 border:2rpx solid rgba(229,229,229,1);
 height: 260rpx;
 padding:10rpx;

}
.bottom-btn {
  display:flex;
  justify-content:flex-end;
  align-items:center;
  padding:0rpx 40rpx 60rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.custom-class {
  margin-right: 30rpx;
}
