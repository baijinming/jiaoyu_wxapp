/* component/chat/title.wxss */
.title {
  /* height: 130rpx; */
  background:rgba(255,255,255,1);
  box-shadow:0px 4px 7px 0px rgba(0,0,0,0.06);
  overflow: hidden;
}
.header-box{
  display: flex;
  width: 100%;
  overflow: hidden;
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  align-items: center;
}

.avatar {
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
  margin-left: 10rpx;
}
.avatar image {
  border-radius: 50%;
  width: 70rpx;
  height: 70rpx;
}

.title-h {
  /* height:45rpx; */
  font-size:26rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(48,48,48,1);
  line-height: 1;
  margin-bottom: 10rpx;
}
.title-c {
  display: flex;
  flex-direction: column;
  font-size:22rpx;
  font-family:PingFangSC;
  font-weight:400;
  color:rgba(254,105,93,1);
  line-height:36rpx;
  padding: 10rpx;
  box-sizing: border-box;
  margin-left: 10rpx;
}

.swiper {
  width: 100%;
  height: 300rpx;
  margin-top: 10rpx;
}

.swiper-item {
  width: 100%;
  height: 300rpx;
}

.img {
  width: 100%;
  height: 300rpx;
}