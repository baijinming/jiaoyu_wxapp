<view class="i-class i-load-more {{ loading ? '' : 'i-load-more-line' }}">
    <view class="i-load-more-loading" wx:if="{{ loading }}" style='color:#dcdcdc;font-size:24rpx;'></view>
    <view class="i-load-more-tip" style='color:#dcdcdc;font-size:24rpx;'>
        <view wx:if="{{ tip !== '' }}" style='color:#dcdcdc;font-size:24rpx;'>{{ tip }}</view>
        <view wx:elif="{{ tip === '' && loading }}" style='color:#dcdcdc;font-size:24rpx;'>正在加载</view>
        <view class="i-load-more-empty" style='color:#dcdcdc;font-size:24rpx;' wx:else></view>
    </view>
</view>