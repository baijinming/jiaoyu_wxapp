page {
    background-color: #fafafa;
}

.tabwrap {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 74rpx;
    white-space: nowrap;
    box-shadow: 0 4rpx 7rpx 0 rgba(0, 0, 0, 0.06);
    background-color: #fff;
    z-index:999999;
}

.tabwrap::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.tab {
    display: inline-block;
    margin: 0 35rpx;
    line-height: 74rpx;
    font-size: 29rpx;
    color: #999;
}

.active {
    font-weight: 700;
    color: #3c89ff;
}

.item {
    width: 706rpx;
    margin: 0 auto 18rpx;
    padding: 16rpx 20rpx 20rpx;
    border-radius: 16rpx;
    background: rgba(255, 255, 255, 1);
}

.title {
    line-height: 36rpx;
    font-size: 29rpx;
    font-weight: 700;
    color: #303030;
}

.date {
    line-height: 25rpx;
    font-size: 22rpx;
    color: #999;
    margin-top: 6rpx;
}

.img {
    position: relative;
    width: 666rpx;
    height: 288rpx;
    margin: 25rpx auto 0;
    border-radius: 16rpx;
    background: #fbfbfb;
}

.name {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 78rpx;
    padding-left: 33rpx;
    line-height: 78rpx;
    border-radius: 0 0 16rpx 16rpx;
    font-size: 25rpx;
    color: #fff;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.58) 100%);
}
