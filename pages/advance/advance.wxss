@import "/wxParse/wxParse.wxss";

.banner {
  width: 750rpx;
  height: 424rpx;
  position: relative;
}

.live-bg {
  width: 750rpx;
  height: 424rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 1;
}

.state {
  text-align: center;
  line-height: 43rpx;
  font-size: 31rpx;
  color: #fff;
  position: absolute;
  left: 50%;
  top: 140rpx;
  transform: translateX(-50%);
  z-index: 99;
}

.countdown {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 32rpx;
  color: rgb(255,204,0);
  position: absolute;
  left: 50%;
  top: 180rpx;
  transform: translateX(-50%);
  z-index: 99;
}

.clock {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: -60rpx;
  top: 40rpx;
  z-index: 99;
}

.remind {
  width: 241rpx;
  height: 71rpx;
  margin: 0 auto;
  padding-left: 94rpx;
  line-height: 71rpx;
  font-size: 25rpx;
  color: #6db533;
  border-radius: 9rpx;
  background: url('data:image/png;base64,') no-repeat center/100%;
}

.tit-wrap {
  display: flex;
  align-items: center;
  padding: 33rpx 40rpx 27rpx 25rpx;
  border-bottom: 18rpx solid #fafafa;
}

.left {
  flex: 1;
}

.left .title {
  line-height: 43rpx;
  font-size: 31rpx;
  font-weight: 700;
  color: #303030;
}

.left .intro {
  margin-top: 7rpx;
  line-height: 33rpx;
  font-size: 24rpx;
  color: #303030;
}

.left .intro text:last-child {
  margin-left: 98rpx;
}

.share-btn {
  width: 54rpx;
  height: 54rpx;
  padding: 0;
  border: 0;
  border-radius: 0;
  background-color: transparent;
}

.share-btn::after {
  border: 0;
}

.share {
  width: 54rpx;
  height: 54rpx;
}

.head {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 45rpx 15rpx;
  border-bottom: 18rpx solid #fafafa;
  background-color: #fff;
}

.head .info {
  flex: 1;
}

.name {
  position: relative;
  padding-left: 30rpx;
  line-height: 43rpx;
  font-size: 31rpx;
  font-weight: 700;
  color: #303030;
}

.name::before {
  content: '';
  position: absolute;
  width: 13rpx;
  height: 27rpx;
  top: 6rpx;
  left: -44rpx;
  background: rgba(60, 137, 255, 1);
}

.head .brief {
  padding-left: 30rpx;
  margin-top: 7rpx;
  margin-bottom: 9rpx;
  line-height: 36rpx;
  font-size: 25rpx;
  color: #303030;
}

.head .blank {
  display: flex;
  margin-bottom: 18rpx;
  padding-right: 10rpx;
}

.head .icon {
  margin-top: 4rpx;
  width: 30rpx;
  height: 30rpx;
}

.text {
  flex: 1;
  line-height: 36rpx;
  font-size: 25rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  background-color: #ccc;
}

.user {
  padding: 22rpx 76rpx 20rpx;
  line-height: 36rpx;
  font-size: 25rpx;
  color: #303030;
  border-bottom: 18rpx solid #fafafa;
}

.intro-wrap {
  padding-top: 25rpx;
  padding-left: 45rpx;
}

.lbanner {
  width: 694rpx;
  height: 181rpx;
  margin: 30rpx auto 18rpx;
  border-radius: 14rpx;
  background-color: #fbfbfb;
}

.lintro {
  width: 750rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
  line-height: 53rpx;
  font-size: 24rpx;
  color: #303030;
}

.btn {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 750rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-weight: 700;
  font-size: 34rpx;
  color: #fff;
  background: linear-gradient(135deg, rgba(111, 190, 255, 1) 0%, rgba(60, 137, 255, 1) 100%);
}

.big {
  display: inline-block;
}

.advance-name {
  color: #333;
  font-size: 28rpx;
  line-height: 2;
  text-align: center;
}

.advance-time {
  color: #666;
  font-size: 24rpx;
  line-height: 2;
  text-align: center;
  margin-bottom: 20rpx;
}

.shadw-line {
  height: 6rpx;
  width: 100%;
  background-color: #e9e9e9;
  box-shadow: 0 5rpx 5rpx 5rpx #fff;
  margin-bottom: 50rpx;
}

.advance-text {
  color: #333;
  font-size: 28rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.open-btn {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #338cfd;
  color: #fff;
  font-size: 24rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin: 50rpx auto 0;
}
