.input-item {
  height: 100rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #e9e9e9;
}

.text {
  font-size: 28rpx;
  color: #333;
  margin: 0 30rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.btn {
  width: 500rpx;
  height: 100rpx;
  background-color: #e9e9e9;
  margin: 100rpx auto;
  border-radius: 10rpx;
  line-height: 100rpx;
  text-align: center;
  color: #333
}

.bindOk {
  color: #fff;
  background-color: #3F51B5;
}