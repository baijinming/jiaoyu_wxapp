.label {
    position: relative;
    line-height: 38rpx;
    width: max-content;
    font-size: 28rpx;
    font-weight: 700;
}

.label::after {
    content: "*";
    right: -20rpx;
    position: absolute;
    line-height: 38rpx;
    font-size: 28rpx;
    color: #c50000;
}

input {
    flex: 1;
    margin-left: 48rpx;
    font-size: 28rpx;
}

.plc {
    font-size: 28rpx;
    color: #dbdbdb;
}

.block {
    display: flex;
    align-items: center;
    margin-top: 12rpx;
}

.icon {
    width: 50rpx;
