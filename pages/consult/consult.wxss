page {
    background-color: #fafafa;
}

.item {
    overflow: hidden;
    width: 706rpx;
    height: 396rpx;
    margin: 0 auto 18rpx;
    border-radius: 16rpx;
    background: rgba(255, 255, 255, 1);
}

.title {
    display: flex;
    align-items: center;
    margin-top: 13rpx;
    margin-left: 29rpx;
}

.text {
    margin-left: 9rpx;
    line-height: 43rpx;
    font-weight: 700;
    font-size: 31rpx;
    color: #303030;
}

.icon {
    width: 48rpx;
    height: 57rpx;
}

.img {
    position: relative;
    width: 666rpx;
    height: 288rpx;
    margin: 25rpx auto 0;
    border-radius: 16rpx;
    background: #fbfbfb;
    display: block;
}

.name {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 78rpx;
    padding-left: 33rpx;
    line-height: 78rpx;
    border-radius: 0 0 16rpx 16rpx;
    font-size: 25rpx;
    color: #fff;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.58) 100%);
}
