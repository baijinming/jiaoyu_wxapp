page {
  background-color: #fff;
}

.conupon {
  width: 180rpx;
  height: 180rpx;
  position: fixed;
  right: 0;
  top: 70%;
  z-index: 9999;
}

.head {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 29rpx 36rpx 27rpx 24rpx;
}

.head .search {
  flex: 1;
  display: flex;
  align-items: center;
  padding-left: 20rpx;
  height: 60rpx;
  border-radius: 30rpx;
  background-color: #f0f0f0;
}

.head .search .icon {
  width: 33rpx;
  height: 33rpx;
  margin-right: 5rpx;
}

.head .search .text {
  line-height: 36rpx;
  font-size: 25rpx;
  color: #999;
}

.head .message {
  width: 51rpx;
  height: 51rpx;
  margin-left: 13rpx;
}

.swiper {
  height: 308rpx;
}

.swiper-item {
  box-sizing: border-box;
  padding: 0 34rpx;
}

.swiper-item .img {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  background-color: #fbfbfb;
}

.menuwrap {
  padding: 18rpx 27rpx 14rpx;
  border-bottom: 18rpx solid #fafafa;
}

.menu {
  display: inline-block;
  width: 120rpx;
  margin: 0 27rpx;
}

.menu .icon {
  display: block;
  width: 94rpx;
  height: 94rpx;
  margin: 22rpx auto 0;
}

.menu .text {
  margin-top: 13rpx;
  text-align: center;
  line-height: 31rpx;
  font-size: 22rpx;
  color: #303030;
}

.titlewrap {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 24rpx 43rpx 0 34rpx;
}

.titlewrap .title {
  flex: 1;
  line-height: 47rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #303030;
}

.titlewrap .title2 {
  flex: 1;
  position: relative;
  line-height: 40rpx;
  font-size: 29rpx;
  font-weight: 700;
  color: #303030;
}

.titlewrap .title2:before {
  content: '';
  position: absolute;
  left: -11rpx;
  top: 50%;
  width: 9rpx;
  height: 31rpx;
  margin-top: -15rpx;
  background: rgba(60, 137, 255, 1);
}

.titlewrap .more {
  line-height: 31rpx;
  font-size: 22rpx;
  color: #999;
}

.titlewrap .icon {
  width: 27rpx;
  height: 27rpx;
}

.lesson {
  width: 100%;
  display: flex;
  align-items: center;
  padding: 27rpx 27rpx 27rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #fafafa;
}

.lesson:last-child {
  border-bottom: none;
}

.lesson .img {
  width: 200rpx;
  height: 160rpx;
  border-radius: 10rpx;
  background: #fbfbfb;
}

.lesson .info {
  flex: 1;
  padding-left: 27rpx;
  box-sizing: border-box;
}

.lesson .name {
  width: 460rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 38rpx;
  font-size: 32rpx;
  font-weight: 700;
}

.lesson .brief {
  width: 460rpx;
  margin-top: 18rpx;
  line-height: 36rpx;
  font-size: 27rpx;
  color: #999;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.lesson .blank {
  display: flex;
  align-items: center;
  margin-top: 18rpx;
}

.lesson .price {
  line-height: 31rpx;
  font-size: 31rpx;
  font-weight: 700;
  color: #e13434;
}

.lesson .price span {
  font-size: 22rpx;
}

.lesson .free {
  width: 47rpx;
  height: 27rpx;
  line-height: 27rpx;
  text-align: center;
  color: #fff;
  font-size: 18rpx;
  border-radius: 13rpx 0 13rpx 0;
  background: linear-gradient(180deg, rgba(245, 81, 95, 1) 0%, rgba(221, 0, 33, 1) 100%);
}

.lesson .cost {
  margin-left: 7rpx;
  line-height: 31rpx;
  font-size: 22rpx;
  text-decoration: line-through;
  color: #979797;
}

.lesson .time {
  flex: 1;
  margin-left: 30rpx;
  line-height: 31rpx;
  font-size: 22rpx;
  color: #979797;
}

.lesson .amount {
  line-height: 31rpx;
  font-size: 22rpx;
  color: #979797;
}

.lesson .like {
  width: 25rpx;
  height: 25rpx;
  margin-left: 18rpx;
}

.banner2 {
  width: 694rpx;
  height: 181rpx;
  margin: 6rpx auto 0;
}

.banner2-swiper {
  width: 694rpx;
  height: 181rpx;
}

.banner2-swiper-item {
  width: 694rpx;
  height: 181rpx; 
}

.banner2-image {
  width: 694rpx;
  height: 181rpx;
  margin: 10rpx 0;
  border-radius: 14rpx;
}

.line {
  height: 18rpx;
  margin-top: 27rpx;
  background-color: #fafafa;
}

.tabwrap {
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-top: 38rpx;
}

.tabwrap .tab {
  padding: 0 20rpx;
  line-height: 36rpx;
  font-size: 25rpx;
  color: #303030;
}

.tabwrap .active {
  color: #3c89ff;
}
