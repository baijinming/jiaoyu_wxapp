page {
  background-color: #fff;
}

.video {
  width: 750rpx;
  height: 424rpx;
}

.wrap {
  padding: 24rpx 29rpx 29rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #fafafa;
}

.title {
  line-height: 51rpx;
  font-size: 36rpx;
  color: #303030;
  font-weight: 700;
}

.detail {
  margin-top: 11rpx;
  line-height: 36rpx;
  font-size: 25rpx;
  color: #999;
}

.tips {
  margin-top: 11rpx;
  line-height: 36rpx;
  font-size: 25rpx;
  color: #3c89ff;
}

.tabwrap {
}

.chapter-title {
  font-size: 28rpx;
  color: #222;
  margin: 20rpx;
}

.chapter {
  width: 100%;
  height: 200rpx;
  margin: 20rpx 0;
  white-space: nowrap;
}

.chapter-item {
  width: 260rpx;
  height: 180rpx;
  margin: 0 20rpx;
  /* border: 1rpx solid #999; */
  font-size: 28rpx;
  line-height: 1.5;
  padding: 40rpx 20rpx;
  box-sizing: border-box;
  display: inline-block;
  background-color: #fafafa;
  position: relative
}

.chapter-cheked {
  border: 2rpx solid #3c89ff;
  color: #3c89ff;
  background-color: #fff
}

.text-name {
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.audition {
  width: 80rpx;
  height: 30rpx;
  position: absolute;
  top: 0;
  right: 0;
}