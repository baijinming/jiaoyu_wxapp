page {
    background-color: #fafafa;
}

.item {
    overflow: hidden;
    width: 706rpx;
    height: 438rpx;
    margin: 0 auto 16rpx;
    border-radius: 16rpx;
    background: rgba(255, 255, 255, 1);
}

.img {
    position: relative;
    width: 666rpx;
    height: 288rpx;
    margin: 22rpx auto 24rpx;
    border-radius: 16rpx;
    background: #fbfbfb;
    display: block
}

.name {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 78rpx;
    padding-left: 25rpx;
    color: #fff;
    line-height: 78rpx;
    font-size: 25rpx;
    border-radius: 0 0 16rpx 16rpx;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.58) 100%);
}

.blank {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-left: 20rpx;
    padding-right: 43rpx;
}

.teacher {
    line-height: 38rpx;
    font-size: 27rpx;
    color: #303030;
    font-weight: 700;
}

.time {
    margin-top: 7rpx;
    line-height: 31rpx;
    font-size: 24rpx;
    color: #999;
}

.wait {
    line-height: 38rpx;
    font-size: 27rpx;
    font-weight: 700;
    color: #3c89ff;
}

.btn {
    width: 196rpx;
    height: 65rpx;
    line-height: 65rpx;
    text-align: center;
    font-size: 25rpx;
    border-radius: 11rpx;
    color: #fff;
    background: linear-gradient(135deg, rgba(211, 211, 211, 1) 0%, rgba(198, 198, 198, 1) 100%);
}

.active {
    background: linear-gradient(135deg, rgba(111, 190, 255, 1) 0%, rgba(60, 137, 255, 1) 100%);
}
